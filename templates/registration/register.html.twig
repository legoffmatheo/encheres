{% extends 'base.html.twig' %}

{% block title %}Créer un compter{% endblock %}

{% block body %}
    <div class="container security-form">
        <div class="login-form">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
        
            <h1>Créer un compte</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_widget(registrationForm.email,{'attr':{'class':'form form-control','placeholder':"email"}}) }}
                <br>
                {{ form_widget(registrationForm.nom,{'attr':{'class':'form form-control','placeholder':"Nom"}}) }}
                <br>
                {{ form_widget(registrationForm.prenom,{'attr':{'class':'form form-control','placeholder':"Prenom"}}) }}
                <br>
                {{ form_widget(registrationForm.plainPassword,{'attr':{'class':'form form-control','placeholder':"Mot de Passe"}}) }}
                <br>
                {{ form_row(registrationForm.agreeTerms) }}
                <br>
                <button type="submit" class="btn btn-block btn-primary">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
